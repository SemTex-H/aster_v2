<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    <material name="red">
        <color rgba="1 0.2 0.2 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_link"></link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="0.3 0.0 0.0"/>
    </joint>
    <link name="chassis_link">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.26 0.16 0.01"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.26 0.16 0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.26" y="0.16" z="0.01">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>
    <gazebo reference="chassis_link">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- LEFT FORWARD WHEEL -->
    <joint name="left_forward_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="left_forward_wheel_link"/>
        <origin xyz="0.115 0.07 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>
    <link name="left_forward_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.03">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_forward_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT FORWARD WHEEL -->
    <joint name="right_forward_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="right_forward_wheel_link"/>
        <origin xyz="0.115 -0.07 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>
    <link name="right_forward_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.03">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_forward_wheel_link">
        <material>Gazebo/Red</material>
    </gazebo>


    <!-- LEFT REAR WHEEL -->
    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="left_rear_wheel_link"/>
        <origin xyz="-0.115 0.07 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>
    <link name="left_rear_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.03">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_rear_wheel_link">
        <material>Gazebo/Red</material>
    </gazebo>


    <!-- RIGHT REAR WHEEL -->
    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="chassis_link"/>
        <child link="right_rear_wheel_link"/>
        <origin xyz="-0.115 -0.07 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>
    <link name="right_rear_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.03">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_rear_wheel_link">
        <material>Gazebo/Blue</material>
    </gazebo>


 
</robot>